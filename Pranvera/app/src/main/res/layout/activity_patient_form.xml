<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pranvera.root.docmanpersist.ui.PatientFormActivity">




    <LinearLayout
        android:id="@+id/editTextLayout"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/the_image_of_patient_and_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/editTextLayout"
            >




            <ImageView
                android:id="@+id/edit_image_of_patient"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="80dp"
                android:id="@+id/editFotoPatient"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:src="@drawable/ic_action_camera"
                />

        </FrameLayout>

    <EditText
        android:id="@+id/namePatient"
        android:ems="10"
        android:textColorHint="@color/primary_material_light"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome">
    </EditText>
    <EditText
        android:id="@+id/surnamePatient"
        android:ems="10"
        android:textColorHint="@color/primary_material_light"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cognome">
    </EditText>
    <EditText
        android:id="@+id/addresPatient"
        android:ems="10"
        android:textColorHint="@color/primary_material_light"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Indirizzo">
    </EditText>
    <EditText
        android:id="@+id/emailPatient"
        android:ems="10"
        android:textColorHint="@color/primary_material_light"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email">
    </EditText>
    <EditText
        android:id="@+id/cellularPatient"
        android:ems="10"
        android:textColorHint="@color/primary_material_light"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cellulare">
    </EditText>
    <EditText
        android:id="@+id/telPatient"
        android:ems="10"
        android:textColorHint="@color/primary_material_light"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefono">
    </EditText>

        <requestFocus />
    </LinearLayout>


</RelativeLayout>

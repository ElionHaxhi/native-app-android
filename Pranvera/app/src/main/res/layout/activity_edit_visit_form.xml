<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    tools:context="com.pranvera.root.docmanpersist.ui.EditVisitFormActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/editTextLayout"

            android:layout_marginTop="14dp"
            android:orientation="vertical"
            android:isScrollContainer="true"
            android:paddingBottom="14dp"
            android:paddingLeft="10dp"


            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >





            <FrameLayout
                android:id="@+id/the_image_of_visit_and_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/editTextLayout"
               >




                <ImageView
                    android:id="@+id/edit_image_of_visit"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="60dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_launcher"/>
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="120dp"
                    android:id="@+id/editFotoVisit"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:src="@drawable/ic_action_camera"
                    />

            </FrameLayout>



            <FrameLayout
                android:id="@+id/the_image_of_visit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/editTextLayout"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="30dp">



                <TextView
                    android:id="@+id/textview_data_imagine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="lun 12 gen 2015"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/thetwo_textview_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/the_image_of_visit">

                <TextView
                    android:id="@+id/textview_dettagli"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Goal Exam:"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edittext_goalexam_retval"
                    android:windowSoftInputMode="adjustPan"
                    android:layout_marginLeft="120dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="descrizione_goalexam"/>

            </FrameLayout>
            <FrameLayout
                android:id="@+id/thetwo_textview_anamnesi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/thetwo_textview_goal">

                <TextView
                    android:id="@+id/textview_anamnesi"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Anamnesi:"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edittext_anamnesi_retval"
                    android:layout_marginLeft="120dp"
                    android:windowSoftInputMode="adjustPan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="descrizione anamnesi"/>

            </FrameLayout>
            <FrameLayout
                android:id="@+id/thetwo_textview_terapy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/thetwo_textview_anamnesi">

                <TextView
                    android:id="@+id/textview_terapy"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Terapy:"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edittext_terapy_retval"
                    android:layout_marginLeft="120dp"
                    android:windowSoftInputMode="adjustPan"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="descrizione terapy"/>

            </FrameLayout>
            <FrameLayout
                android:id="@+id/thetwo_textview_diagnostic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/thetwo_textview_terapy">

                <TextView
                    android:id="@+id/textview_diagnostic"

                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Diagnostic:"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/edit_diagnostic_retval"
                    android:layout_marginLeft="120dp"
                    android:windowSoftInputMode="adjustPan"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="descrizione"/>

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
